# Docker Compose Environment Variables Template
# Copy this file to .env and fill in your actual values

# ====================
# Poker Service Config
# ====================
# Docker image for poker service
POKER_IMAGE=ghcr.io/amitgoelny/gizmopokertracker:latest

# JWT secret for authentication (CHANGE THIS!)
SECRET_JWT=your-secret-jwt-token-here

# Database configuration
DATABASE_URL=jdbc:sqlite:/app/data/gizmopoker.db

# Data persistence directory (host path)
POKER_DATA_DIR=../files/poker-data

# Service port
POKER_PORT=8080

# Domain configuration
POKER_DOMAIN=gizmopoker.xyz

# ====================
# Swim Service Config
# ====================
# Docker image for swim service
SWIM_IMAGE=ghcr.io/amitgoelny/swimmasterapp-backend:latest

# JWT configuration for swim service (CHANGE THIS!)
SWIM_JWT_SECRET=your-swim-jwt-secret-here
SWIM_JWT_ISSUER=http://swim-master-api
SWIM_JWT_AUDIENCE=swim-master-users
SWIM_JWT_REALM=SwimMasterApp

# Data persistence directory (host path)
SWIM_DATA_DIR=../files/swim-data

# Service port
SWIM_PORT=8080

# ====================
# Shared Config
# ====================
# Docker pull policy (always, never, if_not_present)
PULL_POLICY=always

# Container restart policy (always, unless-stopped, on-failure, no)
RESTART_POLICY=always

# Enable Traefik reverse proxy
TRAEFIK_ENABLE=true

# Enable TLS/SSL
TLS_ENABLE=true
